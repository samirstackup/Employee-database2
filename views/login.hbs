  <body>
    <div class="logincontainer">
      <h1>Login</h1>
      <form action="/login" method="POST" novalidate>
        <div class="inputs">
          <label for="email">Email</label>
          <input type="email" name="email" required />
         <div id="emailError" class="error-message" style="{{#if displayemailError}}display: block;{{else}}display: none;{{/if}}">Please enter a valid email address </div>
           
          <!-- Error message for email -->

          <label for="password">Password</label>
          <input type="password" name="password" required />
         <div id="passError" class="error-message" style="{{#if displayPassError}}display: block;{{else}}display: none;{{/if}}">Password inccorect </div>

          <!-- Error message for email -->

        </div>
        <div class="buttons">
          <button>Submit</button>
          <button>Cancel</button>
        </div>
      </form>

      <a href="/register" class="href">Register</a>
    </div>
  </body>
</html>