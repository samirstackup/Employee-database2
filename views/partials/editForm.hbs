<div
  class="modal fade"
  id="editmodal"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="editEmployee"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
      </div>
      <div class="modal-header">
        <!-- <h1 class="modal-title fs-5" id="staticBackdropLabel"
                                                    style="color: #2B3674;">
                                                    Edit Employee details for&nbsp;${name.innerHTML}</h1> -->
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">

        <!--        Modal Form       -->

        <form
          id="empeditform"
          novalidate
          method="put"
          enctype="multipart/form-data"
        >

          <div
            class="card p-4"
            style=" display: flex; flex-direction: column;text-align: left;"
          >
            <p
              class="h4 mb-3"
              style="color: var(--primary-color); font-weight: 500; "
            >Basic details</p>

            <!--Upload file box-->
            <div class="row mt-4">
              <div class="col-md-3">
                <img
                  src=""
                  alt="avatar"
                  id="eAvatar"
                  width="120px"
                  height="120px"
                />
              </div>

              <div class="col-md-9">
                <div
                  class="container-border py-3"
                  style="border-radius: 13px;border: 2px dashed #B2BAD0;background: var(--secondary-grey-100, #FAFCFE); align-items: center; display: flex;flex-direction: column; width: 100%;"
                >
                  <label
                    for="editavatar"
                    style="cursor: pointer; text-align: center;"
                  >
                    <span
                      class="material-icons"
                      style="color: rgb(70, 70, 238);"
                    >file_upload</span>
                    <p
                      class="h5"
                      style="color: rgb(70, 70, 238); font-weight: 500;"
                      id="pic"
                    >Replace image?</p>
                    <p style="color: #8F9BBA;">PNG, JPG files are allowed</p>
                  </label>
                  <input
                    name="avatar"
                    type="file"
                    id="editavatar"
                    style="display: none;"
                    accept=".png, .jpg, .jpeg"
                  />
                </div>
              </div>
            </div>
            <input type="hidden" id="employeeId" name="employeeId" />

            <div class="row mt-4">
              <!--Name row-->
              <div class="col-md-3">
                <p
                  class="fheading"
                  style="color:  var(--primary-color);font-weight: 500;"
                >
                  Salutation</p>
                <select class="form-select" id="editedmrms">
                  <!-- <option value="">Select</option> -->
                  <option value="Mr." id="mr" selected>Mr</option>
                  <option value="Mrs." id="mrs">Mrs</option>
                  <option value="Ms" id="ms">Ms</option>
                </select>
              </div>

              <div class="col-md-4">
                <p
                  class="fheading"
                  style="color:  var(--primary-color);font-weight: 500;"
                > First name</p>
                <input
                  type="text"
                  class="form-control"
                  aria-label="Sizing example input"
                  aria-describedby="inputGroup-sizing-sm"
                  id="editedFname"
                />
              </div>
              <div class="col-md-4">
                <p
                  class="fheading"
                  style="color:  var(--primary-color);font-weight: 500;"
                >Last name</p>
                <input
                  type="text"
                  class="form-control"
                  aria-label="Sizing example input"
                  aria-describedby="inputGroup-sizing-sm"
                  id="editedLname"
                />
              </div>
            </div>
            <div class="row mt-4">
              <!-- Username and password-->
              <div class="col-md-6">
                <p
                  class="fheading"
                  style="color:  var(--primary-color);font-weight: 500;"
                > Username</p>
                <input
                  type="text"
                  class="form-control"
                  aria-label="Sizing example input"
                  aria-describedby="inputGroup-sizing-sm"
                  id="editedusername"
                />
              </div>
              <div class="col-md-6">
                <p
                  class="fheading"
                  style="color:  var(--primary-color);font-weight: 500;"
                  type="password"
                >Password</p>
                <input
                  type="email"
                  class="form-control"
                  aria-label="Sizing example input"
                  aria-describedby="inputGroup-sizing-sm"
                  id="editedpassword"
                />
              </div>

            </div>
            <div class="row mt-4">
              <!-- Email=number-->
              <div class="col-md-6">
                <p
                  class="fheading"
                  style="color:  var(--primary-color);font-weight: 500;"
                > Mobile number</p>
                <input
                  type="text"
                  class="form-control"
                  aria-label="Sizing example input"
                  aria-describedby="inputGroup-sizing-sm"
                  id="editedmobile"
                />
              </div>
              <div class="col-md-6">
                <p
                  class="fheading"
                  style="color:  var(--primary-color);font-weight: 500;"
                  type="email"
                >Email address</p>
                <input
                  type="email"
                  class="form-control"
                  aria-label="Sizing example input"
                  aria-describedby="inputGroup-sizing-sm"
                  id="editedemail"
                />
              </div>

            </div>
            <div class="row mt-4">
              <!--gender+DOB-->
              <div class="col-md-6">
                <label for="dob" class="imp">Date of Birth</label>
                <input
                  type="date"
                  class="form-control"
                  name="trip"
                  value="2022-07-08"
                  max="2015-01-01"
                  min="1990-01-01"
                  required
                  style="color: #949DB9;"
                  id="editedbirthday"
                />
              </div>
              <div class="col-md-5 px-5">
                <p
                  class="fheading"
                  style="color:  var(--primary-color);font-weight: 500;"
                  id="editedgender"
                >Gender</p>

                <div class="form-check form-check-inline">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="editedgender"
                    id="editedmaleoption"
                    value="Male"
                  />
                  <label
                    class="form-check-label"
                    for="editedmaleoption"
                    style="color:  var(--primary-color);font-weight: 400;"
                  >Male</label>
                </div>
                <div class="form-check form-check-inline">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="editedgender"
                    id="editedfemaleoption"
                    value="Female"
                  />
                  <label
                    class="form-check-label"
                    for="editedfemaleoption"
                    style="color:  var(--primary-color);font-weight: 400; "
                  >Female</label>
                </div>
              </div>
            </div>

            <div class="row mt-4">
              <!-- Qualifications     -->
              <div class="col-md-12">
                <p
                  class="fheading"
                  style="color:  var(--primary-color);font-weight: 500;"
                >Qualifications</p>
                <input
                  type="text"
                  class="form-control"
                  aria-label="Sizing example input"
                  aria-describedby="inputGroup-sizing-sm"
                  id="editedqual"
                />
              </div>
            </div>

            <div class="row mt-4">
              <!-- Adress     -->
              <div class="col-md-12">
                <p
                  class="fheading"
                  style="color:  var(--primary-color);font-weight: 500;"
                >Address</p>
                <input
                  type="text"
                  class="form-control"
                  aria-label="Sizing example input"
                  aria-describedby="inputGroup-sizing-sm"
                  id="editedaddress"
                />
              </div>
            </div>
            <div class="row mt-4">
              <!--Country + state-->
              <div class="col-md-6">
                <p
                  class="fheading"
                  style="color:  var(--primary-color);font-weight: 500;"
                >Country</p>
                <select class="form-select" id="editedcountry">
                  <option selected>Choose...</option>
                  <option value="India">India</option>
                  <option value="Srilanka">Srilanka</option>
                  <option value="Bangkok">Bangkok</option>
                </select>
              </div>
              <div class="col-md-6">
                <p
                  class="fheading"
                  style="color:  var(--primary-color);font-weight: 500;"
                >State</p>
                <select class="form-select" id="editedstate">
                  <option selected>Choose...</option>
                  <option value="Kerala">Kerala</option>
                  <option value="Mumbai">Mumbai</option>
                  <option value="Bangkok">Bangkok</option>
                </select>
              </div>
            </div>
            <div class="row mt-4">
              <!--    pin/state   -->
              <div class="col-md-6">
                <p
                  class="fheading"
                  style="color:  var(--primary-color);font-weight: 500;"
                >City</p>
                <select class="form-select" id="editedcity">
                  <option selected>Choose...</option>
                  <option value="Abc">Abc</option>
                  <option value="Cba">Cba</option>
                  <option value="Zyx">Zyx</option>
                </select>

              </div>
              <div class="col-md-6">
                <p
                  class="fheading"
                  style="color:  var(--primary-color);font-weight: 500;"
                >Pin/zip</p>
                <input
                  type="text"
                  class="form-control"
                  aria-label="Sizing example input"
                  aria-describedby="inputGroup-sizing-sm"
                  id="editedpinzip"
                />
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >Close</button>
            <button
              type="submit"
              id="editButton"
              class="btn btn-primary"
              data-employee-id="${id}"
            >
              <i class="fa-regular fa-pen-to-square"></i>&nbsp;&nbsp;Edit
              employee
            </button>

          </div>
        </form>
      </div>

    </div>
  </div>
</div>